<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500" prefWidth="450.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.andreag.whispercli.AboutWindow">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <Label text="%whisperCli" textAlignment="CENTER" />
            <HBox>
                <Label text="%developedBy" textAlignment="CENTER" />
                <Label text=" " textAlignment="CENTER" />
                <Label text="Andrea Gaspardo" textAlignment="CENTER"/>
            </HBox>
            <Label text="%perCaFoscari" textAlignment="CENTER" />

            <HBox>
                <Label text="%version" textAlignment="CENTER" />
                <Label text=" " textAlignment="CENTER" />
                <Label text="%softwareVersion" textAlignment="CENTER"/>
            </HBox>

            <Label text="2024 - 2025" textAlignment="CENTER">
            <opaqueInsets>
               <Insets />
            </opaqueInsets></Label>
            <TextArea editable="false" focusTraversable="false" text="%copyright" wrapText="true">
            <opaqueInsets>
               <Insets />
            </opaqueInsets></TextArea>
        </VBox>
    </center>
    <bottom>
        <Button mnemonicParsing="false" onAction="#close" text="Close" BorderPane.alignment="CENTER" />
    </bottom>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
